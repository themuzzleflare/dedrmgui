    <artifactId>dedrmgui</artifactId>

    <name>Kindle DeDRM GUI</name>
    <description>Graphical User Interface for the Kindle DeDRM tools.</description>
    <url>https://github.com/themuzzleflare/dedrmgui</url>

    <properties>
        <resources.dir>src/main/resources</resources.dir>

        <root.fonts.path>fonts</root.fonts.path>
        <root.icons.path>icons</root.icons.path>
        <root.macos.icons.path>macos</root.macos.icons.path>
        <root.all.icons.path>all</root.all.icons.path>

        <fonts.path>**/${root.fonts.path}/**</fonts.path>
        <macos.icons.path>**/${root.icons.path}/${root.macos.icons.path}/**</macos.icons.path>
        <all.icons.path>**/${root.icons.path}/${root.all.icons.path}/**</all.icons.path>

        <mac.aarch64.dir>${project.build.directory}/mac-aarch64</mac.aarch64.dir>
        <mac.dir>${project.build.directory}/mac</mac.dir>
        <win.dir>${project.build.directory}/win</win.dir>
        <linux.aarch64.dir>${project.build.directory}/linux-aarch64</linux.aarch64.dir>
        <linux.dir>${project.build.directory}/linux</linux.dir>

        <mac.aarch64.finalname>${project.artifactId}-${project.version}-mac-aarch64</mac.aarch64.finalname>
        <mac.finalname>${project.artifactId}-${project.version}-mac</mac.finalname>
        <win.finalname>${project.artifactId}-${project.version}-win</win.finalname>
        <linux.aarch64.finalname>${project.artifactId}-${project.version}-linux-aarch64</linux.aarch64.finalname>
        <linux.finalname>${project.artifactId}-${project.version}-linux</linux.finalname>

        <mac.aarch64.classes.dir>${mac.aarch64.dir}/classes</mac.aarch64.classes.dir>
        <mac.classes.dir>${mac.dir}/classes</mac.classes.dir>
        <win.classes.dir>${win.dir}/classes</win.classes.dir>
        <linux.aarch64.classes.dir>${linux.aarch64.dir}/classes</linux.aarch64.classes.dir>
        <linux.classes.dir>${linux.dir}/classes</linux.classes.dir>

        <java.jdks.path>${user.home}/Java JDKs</java.jdks.path>
        <jmods.path>${user.home}/jmods</jmods.path>

        <mac.aarch64.jlink.executable>
            ${java.jdks.path}/${java.version}/macOS/aarch64/jdk-${java.version}.jdk/Contents/Home/bin/jlink
        </mac.aarch64.jlink.executable>
        <mac.jlink.executable>
            ${java.jdks.path}/${java.version}/macOS/x64/jdk-${java.version}.jdk/Contents/Home/bin/jlink
        </mac.jlink.executable>

        <mac.aarch64.jmods.path>${jmods.path}/${java.version}/mac-aarch64</mac.aarch64.jmods.path>
        <mac.jmods.path>${jmods.path}/${java.version}/mac</mac.jmods.path>
        <win.jmods.path>${jmods.path}/${java.version}/win</win.jmods.path>
        <linux.aarch64.jmods.path>${jmods.path}/${java.version}/linux-aarch64</linux.aarch64.jmods.path>
        <linux.jmods.path>${jmods.path}/${java.version}/linux</linux.jmods.path>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
        </dependency>

        <dependency>
            <groupId>cloud.tavitian</groupId>
            <artifactId>nsmenufx</artifactId>
        </dependency>

